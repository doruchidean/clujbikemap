    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_widget_update_time_title"/>

    <NumberPicker
        android:id="@+id/picker_dialog_widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
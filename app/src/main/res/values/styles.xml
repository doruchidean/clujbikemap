<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorAccent">@color/color_primary</item>
    <item name="colorControlNormal">@color/color_actionbar_icon</item>
    <item name="colorButtonNormal">@color/color_primary</item>
    <item name="android:textColorPrimary">@color/color_text_main</item>
  </style>

  <style name="AppTheme.ProgressDialog" parent="AppTheme">
    <item name="android:colorBackground">@color/semi_transparent</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:textColor">@color/color_dialog_title</item>
    <item name="android:background">@color/color_primary</item>
    <item name="android:borderlessButtonStyle">@style/MyDialogTheme.Button</item>
  </style>

  <style name="MyDialogTheme.Button">
    <item name="android:textColor">@color/white</item>
  </style>

</resources>
